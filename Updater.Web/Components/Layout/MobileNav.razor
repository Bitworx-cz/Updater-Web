    color: var(--text);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius);
    transition: background-color 0.2s ease;
}

.mobile-nav-close:hover {
    background: rgba(37, 99, 235, 0.14);
}

.mobile-nav-content {
    padding: 1.5rem;
}

.mobile-nav-section {
    margin-bottom: 2rem;
}

.mobile-nav-section h3 {
    color: var(--primary);
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: 'Inter', sans-serif;
}

.mobile-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.mobile-nav-links li {
    margin-bottom: 0.5rem;
}

.mobile-nav-links a {
    display: block;
    color: var(--text);
    text-decoration: none;
    padding: 0.75rem 0;
    font-size: 16px;
    transition: color 0.2s ease;
    font-family: 'Martian Mono', monospace;
    border-radius: var(--radius);
    padding-left: 0.5rem;
}

.mobile-nav-links a:hover {
    color: var(--primary);
    background: rgba(37, 99, 235, 0.12);
}

.mobile-nav-actions {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
}

.mobile-nav-actions .custom-button {
    width: 100%;
    justify-content: center;
}

.mobile-user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(15, 23, 42, 0.9);
    border-radius: var(--radius);
    margin-bottom: 1rem;
    border: 1px solid var(--border-subtle);
}


.mobile-user-details {
    flex: 1;
}

.mobile-user-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--text);
    font-family: 'Inter', sans-serif;
    margin: 0;
}

@@media (max-width: 768px) {
    .mobile-nav-container {
        display: block;
    }
    
    .mobile-nav-toggle {
        display: flex;
    }
}
</style>
