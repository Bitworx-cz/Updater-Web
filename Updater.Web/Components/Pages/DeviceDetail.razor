@page "/device/{deviceId:guid}"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Text.Json
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager navigationManager

<PageTitle>Device Detail</PageTitle>

<link rel="stylesheet" href="app.css">

<div class="container">
    <div class="device-header fade-in">
        <button class="back-button" @onclick="NavigateBack">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Back to Group
        </button>

        @if (device != null)
        {
            <h1 class="device-title">Device Detail</h1>
            <p class="device-subtitle">@device.DeviceId</p>
        }
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <div class="loading-text">Loading...</div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="error-alert fade-in">
            <strong>Error:</strong> @errorMessage
        </div>
    }
    else if (device != null)
    {
        <div class="info-section fade-in">
            <div class="info-card">
                <h2 class="section-title">Device Information</h2>
                <div class="device-info">
                    <div class="info-item">
                        <span class="info-label">MAC Address</span>
                        <span class="info-value mac-address">@device.MacAddress</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Device ID</span>
                        <span class="info-value">@device.DeviceId</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Group</span>
                        <span class="info-value clickable" @onclick="() => NavigateToGroup(device.GroupId)">@device.GroupName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Project</span>
                        <span class="info-value clickable" @onclick="() => NavigateToProject(device.ProjectId)">@device.ProjectName</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="info-section fade-in">
            <div class="info-card">
                <h2 class="section-title">Software Information</h2>
                <div class="device-info">
                    @if (device.CurrentSoftware != null)
                    {
                        <div class="info-item">
                            <span class="info-label">Current Software</span>
                            <span class="info-value">@device.CurrentSoftware.Name</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Current Version</span>
                            <span class="info-value">v@device.CurrentSoftware.VerMajor</span>
                        </div>
                    }
                    else
                    {
                        <div class="info-item">
                            <span class="info-label">Current Software</span>
                            <span class="no-data">Not installed</span>
                        </div>
                    }

                    @if (device.PendingSoftware != null)
                    {
                        <div class="info-item">
                            <span class="info-label">Pending Software</span>
                            <span class="info-value">@device.PendingSoftware.Name</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Pending Version</span>
                            <span class="info-value">v@device.PendingSoftware.VerMajor</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="info-section fade-in">
            <div class="info-card">
                <h2 class="section-title">Activity</h2>
                <div class="device-info">
                    <div class="info-item">
                        <span class="info-label">Last Activity</span>
                        @if (device.LastActivity.HasValue)
                        {
                            <span class="info-value">@FormatLastActivity(device.LastActivity.Value)</span>
                        }
                        else
                        {
                            <span class="no-data">Never</span>
                        }
                    </div>
                    <div class="info-item">
                        <span class="info-label">Created At</span>
                        <span class="info-value">@device.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Updated At</span>
                        <span class="info-value">@device.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

