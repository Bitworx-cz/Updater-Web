        background-color: rgba(255, 0, 0, 0.1);
        border: 1px solid #ff0000;
        color: #ff6b6b;
        padding: 1rem;
        border-radius: 6px;
        margin: 1rem 0;
    }
</style>

@code {
    [Parameter]
    public Guid DeviceId { get; set; }

    private DeviceDetailModel? device;
    private bool isLoading = true;
    private string? errorMessage;
    private ClaimsPrincipal? User;
    private string? UserToken;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadDeviceDetail();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading device: {ex.Message}";
            isLoading = false;
        }
    }

    private async Task LoadDeviceDetail()
    {
        try
        {
            // Get authenticated user
            User = (await AuthenticationStateProvider.GetAuthenticationStateAsync()).User;
            var nid = User.FindFirst(ClaimTypes.NameIdentifier);

            if (nid == null)
            {
                errorMessage = "User is not authenticated.";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            // Create HTTP client
            var client = HttpClientFactory.CreateClient("apiservice");

            // Get user token
            var tokenResponse = await client.GetAsync($"user/{nid.Value}/token");

            if (!tokenResponse.IsSuccessStatusCode)
            {
                errorMessage = $"Error getting token: {tokenResponse.StatusCode}";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            UserToken = await tokenResponse.Content.ReadAsStringAsync();

            if (string.IsNullOrWhiteSpace(UserToken))
            {
                errorMessage = "Token is empty.";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            // Get device detail
            var deviceResponse = await client.GetAsync($"devices/{DeviceId}/{UserToken}");

            if (!deviceResponse.IsSuccessStatusCode)
            {
                errorMessage = $"Error loading device: {deviceResponse.StatusCode}";
                isLoading = false;
                return;
            }

            var deviceJson = await deviceResponse.Content.ReadAsStringAsync();
            device = JsonSerializer.Deserialize<DeviceDetailModel>(deviceJson, new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true
            });

            isLoading = false;
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}";
            isLoading = false;
        }
        catch (JsonException jsonEx)
        {
            errorMessage = $"Data error: {jsonEx.Message}";
            isLoading = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error: {ex.Message}";
            isLoading = false;
        }
    }

    private void NavigateBack()
    {
        if (device != null)
        {
            navigationManager.NavigateTo($"/group/{device.GroupId}");
        }
        else
        {
            navigationManager.NavigateTo("/devices");
        }
    }

    private void NavigateToGroup(Guid groupId)
    {
        navigationManager.NavigateTo($"/group/{groupId}");
    }

    private void NavigateToProject(Guid projectId)
    {
        navigationManager.NavigateTo($"/project/{projectId}");
    }

    private string FormatLastActivity(DateTime lastActivity)
    {
        var now = DateTime.UtcNow;
        var diff = now - lastActivity;

        if (diff.TotalMinutes < 1)
            return "Just now";
        if (diff.TotalMinutes < 60)
            return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24)
            return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 7)
            return $"{(int)diff.TotalDays}d ago";

        return lastActivity.ToString("yyyy-MM-dd HH:mm:ss");
    }

    public record DeviceDetailModel
    {
        public Guid Id { get; set; }
        public string DeviceId { get; set; } = string.Empty;
        public string MacAddress { get; set; } = string.Empty;
        public Guid GroupId { get; set; }
        public string GroupName { get; set; } = string.Empty;
        public Guid ProjectId { get; set; }
        public string ProjectName { get; set; } = string.Empty;
        public SoftwareModel? CurrentSoftware { get; set; }
        public SoftwareModel? PendingSoftware { get; set; }
        public DateTime? LastActivity { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
    }

    public record SoftwareModel
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public int VerMajor { get; set; }
    }
}
