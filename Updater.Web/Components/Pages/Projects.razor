@code {
    private List<ProjectModel>? projects;
    private bool isLoading = true;
    private string? errorMessage;
    private ClaimsPrincipal? User;
    private string? UserToken;

    private bool showCreateForm = false;
    private bool isCreating = false;
    private string newProjectName = string.Empty;
    private string newProjectDescription = string.Empty;
    private string? createErrorMessage;

    private bool showDeleteConfirmation = false;
    private bool isDeleting = false;
    private ProjectModel? projectToDelete;
    private string deleteConfirmationText = string.Empty;
    private string? deleteErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadProjects();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading projects: {ex.Message}";
            isLoading = false;
        }
    }

    private async Task LoadProjects()
    {
        try
        {
            // Get authenticated user
            User = (await AuthenticationStateProvider.GetAuthenticationStateAsync()).User;
            var nid = User.FindFirst(ClaimTypes.NameIdentifier);

            if (nid == null)
            {
                errorMessage = "User is not authenticated.";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            // Create HTTP client
            var client = HttpClientFactory.CreateClient("apiservice");

            // Get user token
            var tokenResponse = await client.GetAsync($"user/{nid.Value}/token");

            if (!tokenResponse.IsSuccessStatusCode)
            {
                errorMessage = $"Error getting token: {tokenResponse.StatusCode}";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            UserToken = await tokenResponse.Content.ReadAsStringAsync();

            if (string.IsNullOrWhiteSpace(UserToken))
            {
                errorMessage = "Token is empty.";
                isLoading = false;
                navigationManager.NavigateTo("/Identity/Login", true);
                return;
            }

            // Call API to get projects
            var projectsResponse = await client.GetAsync($"projects/{UserToken}");

            if (!projectsResponse.IsSuccessStatusCode)
            {
                errorMessage = $"Projects error: {projectsResponse.StatusCode}";
                isLoading = false;
                return;
            }

            var json = await projectsResponse.Content.ReadAsStringAsync();
            projects = JsonSerializer.Deserialize<List<ProjectModel>>(json, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });

            isLoading = false;
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}";
            isLoading = false;
        }
        catch (JsonException jsonEx)
        {
            errorMessage = $"Data error: {jsonEx.Message}";
            isLoading = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error: {ex.Message}";
            isLoading = false;
        }
    }

    private void NavigateToProject(Guid projectId)
    {
        navigationManager.NavigateTo($"/project/{projectId}");
    }

    private void ToggleCreateForm()
    {
        showCreateForm = !showCreateForm;
        if (!showCreateForm)
        {
            // Reset form
            newProjectName = string.Empty;
            newProjectDescription = string.Empty;
            createErrorMessage = null;
        }
    }

    private void CancelCreate()
    {
        showCreateForm = false;
        newProjectName = string.Empty;
        newProjectDescription = string.Empty;
        createErrorMessage = null;
    }

    private async Task CreateProject()
    {
        createErrorMessage = null;

        if (string.IsNullOrWhiteSpace(newProjectName))
        {
            createErrorMessage = "Project name is required";
            return;
        }

        isCreating = true;

        try
        {
            var client = HttpClientFactory.CreateClient("apiservice");

            var formContent = new MultipartFormDataContent
            {
                { new StringContent(newProjectName), "name" },
                { new StringContent(newProjectDescription ?? string.Empty), "description" }
            };

            var response = await client.PostAsync($"projects/{UserToken}", formContent);

            if (!response.IsSuccessStatusCode)
            {
                createErrorMessage = $"Failed to create project: {response.StatusCode}";
                isCreating = false;
                return;
            }

            // Reload projects
            await LoadProjects();

            // Close form and reset
            showCreateForm = false;
            newProjectName = string.Empty;
            newProjectDescription = string.Empty;
        }
        catch (Exception ex)
        {
            createErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private void ShowDeleteConfirmation(ProjectModel project)
    {
        projectToDelete = project;
        deleteConfirmationText = string.Empty;
        deleteErrorMessage = null;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
        projectToDelete = null;
        deleteConfirmationText = string.Empty;
        deleteErrorMessage = null;
    }

    private async Task OnDeleteConfirmationInput(ChangeEventArgs e)
    {
        deleteConfirmationText = e.Value?.ToString() ?? string.Empty;

        if (projectToDelete != null && deleteConfirmationText == projectToDelete.Name)
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('delete-confirmation-input')?.blur()");
        }
    }

    private async Task ConfirmDelete()
    {
        if (projectToDelete == null || deleteConfirmationText != projectToDelete.Name)
        {
            return;
        }

        isDeleting = true;
        deleteErrorMessage = null;

        try
        {
            var client = HttpClientFactory.CreateClient("apiservice");
            var response = await client.DeleteAsync($"projects/{projectToDelete.Id}/{UserToken}");

            if (!response.IsSuccessStatusCode)
            {
                deleteErrorMessage = $"Failed to delete project: {response.StatusCode}";
                isDeleting = false;
                return;
            }

            // Reload projects
            await LoadProjects();

            // Close modal
            showDeleteConfirmation = false;
            projectToDelete = null;
            deleteConfirmationText = string.Empty;
        }
        catch (Exception ex)
        {
            deleteErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }

    public record ProjectModel
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
    }
}
